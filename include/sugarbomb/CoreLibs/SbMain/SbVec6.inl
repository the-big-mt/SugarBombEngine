ID_INLINE SbVec6::SbVec6()
{
}

ID_INLINE SbVec6::SbVec6( const float* a )
{
	std::memcpy( p, a, 6 * sizeof( float ) );
}

ID_INLINE SbVec6::SbVec6( const float a1, const float a2, const float a3, const float a4, const float a5, const float a6 )
{
	p[0] = a1;
	p[1] = a2;
	p[2] = a3;
	p[3] = a4;
	p[4] = a5;
	p[5] = a6;
}

ID_INLINE SbVec6 SbVec6::operator-() const
{
	return SbVec6( -p[0], -p[1], -p[2], -p[3], -p[4], -p[5] );
}

ID_INLINE float SbVec6::operator[]( const int index ) const
{
	return p[index];
}

ID_INLINE float& SbVec6::operator[]( const int index )
{
	return p[index];
}

ID_INLINE SbVec6 SbVec6::operator*( const float a ) const
{
	return SbVec6( p[0] * a, p[1] * a, p[2] * a, p[3] * a, p[4] * a, p[5] * a );
}

ID_INLINE float SbVec6::operator*( const SbVec6& a ) const
{
	return p[0] * a[0] + p[1] * a[1] + p[2] * a[2] + p[3] * a[3] + p[4] * a[4] + p[5] * a[5];
}

ID_INLINE SbVec6 SbVec6::operator/( const float a ) const
{
	float inva;
	
	assert( a != 0.0f );
	inva = 1.0f / a;
	return SbVec6( p[0] * inva, p[1] * inva, p[2] * inva, p[3] * inva, p[4] * inva, p[5] * inva );
}

ID_INLINE SbVec6 SbVec6::operator+( const SbVec6& a ) const
{
	return SbVec6( p[0] + a[0], p[1] + a[1], p[2] + a[2], p[3] + a[3], p[4] + a[4], p[5] + a[5] );
}

ID_INLINE SbVec6 SbVec6::operator-( const SbVec6& a ) const
{
	return SbVec6( p[0] - a[0], p[1] - a[1], p[2] - a[2], p[3] - a[3], p[4] - a[4], p[5] - a[5] );
}

ID_INLINE SbVec6& SbVec6::operator*=( const float a )
{
	p[0] *= a;
	p[1] *= a;
	p[2] *= a;
	p[3] *= a;
	p[4] *= a;
	p[5] *= a;
	return *this;
}

ID_INLINE SbVec6& SbVec6::operator/=( const float a )
{
	float inva;
	
	assert( a != 0.0f );
	inva = 1.0f / a;
	p[0] *= inva;
	p[1] *= inva;
	p[2] *= inva;
	p[3] *= inva;
	p[4] *= inva;
	p[5] *= inva;
	return *this;
}

ID_INLINE SbVec6& SbVec6::operator+=( const SbVec6& a )
{
	p[0] += a[0];
	p[1] += a[1];
	p[2] += a[2];
	p[3] += a[3];
	p[4] += a[4];
	p[5] += a[5];
	return *this;
}

ID_INLINE SbVec6& SbVec6::operator-=( const SbVec6& a )
{
	p[0] -= a[0];
	p[1] -= a[1];
	p[2] -= a[2];
	p[3] -= a[3];
	p[4] -= a[4];
	p[5] -= a[5];
	return *this;
}

ID_INLINE SbVec6 operator*( const float a, const SbVec6 b )
{
	return b * a;
}

ID_INLINE bool SbVec6::Compare( const SbVec6& a ) const
{
	return ( ( p[0] == a[0] ) && ( p[1] == a[1] ) && ( p[2] == a[2] ) &&
			 ( p[3] == a[3] ) && ( p[4] == a[4] ) && ( p[5] == a[5] ) );
}

ID_INLINE bool SbVec6::Compare( const SbVec6& a, const float epsilon ) const
{
	if( idMath::Fabs( p[0] - a[0] ) > epsilon )
	{
		return false;
	}
	
	if( idMath::Fabs( p[1] - a[1] ) > epsilon )
	{
		return false;
	}
	
	if( idMath::Fabs( p[2] - a[2] ) > epsilon )
	{
		return false;
	}
	
	if( idMath::Fabs( p[3] - a[3] ) > epsilon )
	{
		return false;
	}
	
	if( idMath::Fabs( p[4] - a[4] ) > epsilon )
	{
		return false;
	}
	
	if( idMath::Fabs( p[5] - a[5] ) > epsilon )
	{
		return false;
	}
	
	return true;
}

ID_INLINE bool SbVec6::operator==( const SbVec6& a ) const
{
	return Compare( a );
}

ID_INLINE bool SbVec6::operator!=( const SbVec6& a ) const
{
	return !Compare( a );
}

ID_INLINE void SbVec6::Set( const float a1, const float a2, const float a3, const float a4, const float a5, const float a6 )
{
	p[0] = a1;
	p[1] = a2;
	p[2] = a3;
	p[3] = a4;
	p[4] = a5;
	p[5] = a6;
}

ID_INLINE void SbVec6::Zero()
{
	p[0] = p[1] = p[2] = p[3] = p[4] = p[5] = 0.0f;
}

ID_INLINE float SbVec6::Length() const
{
	return ( float )idMath::Sqrt( p[0] * p[0] + p[1] * p[1] + p[2] * p[2] + p[3] * p[3] + p[4] * p[4] + p[5] * p[5] );
}

ID_INLINE float SbVec6::LengthSqr() const
{
	return ( p[0] * p[0] + p[1] * p[1] + p[2] * p[2] + p[3] * p[3] + p[4] * p[4] + p[5] * p[5] );
}

ID_INLINE float SbVec6::Normalize()
{
	float sqrLength, invLength;
	
	sqrLength = p[0] * p[0] + p[1] * p[1] + p[2] * p[2] + p[3] * p[3] + p[4] * p[4] + p[5] * p[5];
	invLength = idMath::InvSqrt( sqrLength );
	p[0] *= invLength;
	p[1] *= invLength;
	p[2] *= invLength;
	p[3] *= invLength;
	p[4] *= invLength;
	p[5] *= invLength;
	return invLength * sqrLength;
}

ID_INLINE float SbVec6::NormalizeFast()
{
	float sqrLength, invLength;
	
	sqrLength = p[0] * p[0] + p[1] * p[1] + p[2] * p[2] + p[3] * p[3] + p[4] * p[4] + p[5] * p[5];
	invLength = idMath::InvSqrt( sqrLength );
	p[0] *= invLength;
	p[1] *= invLength;
	p[2] *= invLength;
	p[3] *= invLength;
	p[4] *= invLength;
	p[5] *= invLength;
	return invLength * sqrLength;
}

ID_INLINE int SbVec6::GetDimension() const
{
	return 6;
}

ID_INLINE const SbVec3& SbVec6::SubVec3( int index ) const
{
	return *reinterpret_cast<const SbVec3*>( p + index * 3 );
}

ID_INLINE SbVec3& SbVec6::SubVec3( int index )
{
	return *reinterpret_cast<SbVec3*>( p + index * 3 );
}

ID_INLINE const float* SbVec6::ToFloatPtr() const
{
	return p;
}

ID_INLINE float* SbVec6::ToFloatPtr()
{
	return p;
}